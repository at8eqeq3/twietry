- if verses.count == 0
  %p= t(:'verses.no_verses')
- else
  - verses.each do |verse|
    .verse_item
      %img{:src => "http://id.dxfoto.ru/do?s=5&q=5&l=#{verse.id}", :style => "float: left;"}
      .verse_item_data{:style => "padding-left: 28px;"}
        = verse.user.name
        = t(:'verses.started')
        %a{:href => verse_path(verse)}= verse.title
        = "(#{verse.lines.count})"
        %br
        %br