.page-header
  %h1
    = @verse.title
    %br
    %small= @verse.idea
.row
  .span10.offset1
    - if @verse.lines.count > 0
      - @verse.lines.each do |line|
        .line.row
          .span2
            %img.identicon{:src => line.user.userpic, :width => 64, :height => 64}
          .text.span8
            = line.data
    - else
      .line.row
        .alert-message.block-message.warning= t(:'verses.show.no_lines')
    .line.row
      - if current_user
      
        - if @verse.is_last? current_user
          .alert-message.block-message.error
            %strong Добавлять строчки к одному стиху два раза подряд запрещено.
            %br
            Подожди, пока кто-то еще напишет сюда, или выбери другой стих.
        - else
          .span2
            %img.identicon{:src => current_user.userpic, :width => 64, :height => 64}
          %form.form-stacked{:method => "post", :action => verse_line_path(@verse)}
            %input{:type => "hidden", :name => "authenticity_token", :value => form_authenticity_token}
            %fieldset
              .clearfix
                .input
                  .span6
                    %input.xlarge{:type => "text", :name => "data"}
                    %span.help-block= t(:'lines.fields.data_hint')
                  %input.btn.primary.span2{:type => "submit", :value => t(:"lines.fields.create")}
                  
      - else
        %a{:href => "/auth/twitter"}
          %img{:src => "/assets/sign-in-with-twitter-d.png"}

