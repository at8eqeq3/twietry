.page-header
- if current_user
  %h1= t(:'verses.new.title')
- else
  .signin
    %a{:href => "/auth/twitter"}
      %img{:src => "/assets/signin.png"}
.row
- if current_user
  = form_for @verse, :html => {:class => "form-horizontal"} do |f|
    .control-group
      %label.control-label{:for => "verse[title]"}= t(:'verses.fields.title')
      .controls
        %input.span9{:type => "text", :name => "verse[title]"}
        %p.help-block= t(:'verses.fields.title_hint')
      %label.control-label{:for => "verse[idea]"}= t(:'verses.fields.idea')
      .controls
        %textarea.span9{:name => "verse[idea]"}
        %p.help-block= t(:'verses.fields.idea_hint')
    .form-actions
      %input.btn.btn-primary{:type => "submit", :value => t(:'verses.fields.create')}
