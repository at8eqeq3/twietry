.rating
  .score[voteable, :score]= voteable.votes_point unless hide_rating
- if current_user
  .vote[voteable, :vote]
    - if voteable.voted_by?(current_user)
      %span{:class => voteable.vote_value(current_user)}= t(:"shared.rating.#{voteable.vote_value(current_user)}")
    - else
      = link_to raw("&uArr;"), {:controller => voteable.collection.name, :action => "love", :id => voteable.id}, :method => :post, :remote => true, :class => "btn success"
      = link_to raw("&dArr;"), {:controller => voteable.collection.name, :action => "hate", :id => voteable.id}, :method => :post, :remote => true, :class => "btn danger"
